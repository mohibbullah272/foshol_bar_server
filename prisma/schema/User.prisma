model User {
   id Int @id @default(autoincrement())
   name String?
   email String? @unique
   password String 
   photo String?
   address String? 
   phone String  @unique
   role Role @default(USER)
   status Status @default(NOTREQUSTED)
   createdAt DateTime @default(now())
  
  
  
   KYC KYC?
   Investment Investment[] 
   payment payment[]
}

enum Role {
    USER
    INVESTOR
    ADMIN
}

enum Status {
    NOTREQUSTED
    PENDING
    APPROVED
    BLOCKED
}

